<div class="admin_title">
    <h2> Edit Post </h2>

    <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="button" />
    </form>
</div>

<form action="/edit-post/<%= post._id %>?_method=PUT" method="POST">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Edit post title" name="title" value="<%= post.title %>" />



    <label for="body"><b>Post content</b></label>
    <textarea name="body" cols="50" rows="10"><%= post.body %></textarea>

    <input type="submit" value="Update" class="button">
</form>